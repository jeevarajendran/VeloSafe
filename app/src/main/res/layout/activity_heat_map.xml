<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.techgenie.velosafe.HeatMap"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">



        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/imageButton"
            android:layout_row="26"
            android:layout_column="7"
            android:scaleType="fitCenter"
            android:src="@drawable/safe_place_button"
            android:background="@android:color/transparent"
            android:alpha="0.50" />
        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_row="26"
            android:layout_column="8" />
    </GridLayout>


    <ImageButton
        android:layout_width="771dp"
        android:layout_height="450dp"
        android:id="@+id/adButton"
        android:layout_row="25"
        android:layout_column="7"
        android:scaleType="fitCenter"
        android:src="@drawable/velosafe_logo_1"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:layout_alignParentTop="true" />



    <ImageButton
        android:layout_width="50dp"
        android:layout_height="500dp"
        android:id="@+id/spotMe"
        android:layout_row="25"
        android:layout_column="25"
        android:scaleType="fitCenter"
        android:src="@drawable/locateme"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="47dp"
        android:alpha="0.80"/>

</RelativeLayout>


